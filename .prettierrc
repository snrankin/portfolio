{
	"tabWidth": 4,
	"tabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"proseWrap": "never",
	"quoteProps": "as-needed",
	"bracketSpacing": true,

	"arrowParens": "always",
	"overrides": [
		{
			"files": ["*.yml", "*.neon"],
			"options": {
				"tabWidth": 2,
				"tabs": false,
				"parser": "yaml"
			}
		},
		{
			"files": [".*rc"],
			"options": {
				"tabWidth": 4,
				"tabs": true,
				"parser": "json"
			}
		},
		{
			"files": ["*.hbs", "*.html", "*.svg"],
			"options": {
				"singleQuote": false,
				"tabWidth": 4,
				"tabs": true
			}
		}
	]
}
